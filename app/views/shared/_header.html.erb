<header class="bg-white p-4 shadow-md">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to '/', class: 'navbar-brand' do %>
      <%= image_tag 'Image_maker.png', class: 'logo-image' %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ms-auto d-flex align-items-center">
        <li class="nav-item">
          <%= link_to '画像/ストーリーの生成', '#', class: 'nav-link text-blue-500 font-bold' %>
        </li>
        <li class="nav-item">
          <%= link_to 'みんなの投稿', '#', class: 'nav-link text-blue-500 font-bold' %>
        </li>
        <li class="nav-item">
          <%= link_to 'お気に入りの保存', '#', class: 'nav-link text-blue-500 font-bold' %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= image_tag 'user.png', class: 'user-image rounded-full' %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
              <%= link_to 'マイページ', user_path(current_user), class: 'dropdown-item' %>
              <%= link_to 'お気に入りの投稿', favorite_posts_path, class: 'dropdown-item' %>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
            <% else %>
              <%= link_to 'ログイン', new_user_session_path, class: 'dropdown-item' %>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
